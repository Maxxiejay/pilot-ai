{
  "name": "pilot-ai-assistant",
  "version": "1.0.0",
  "description": "System-wide context-aware AI assistant with screen capture and Gemini integration",
  "main": "main.js",  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "clean": "rmdir /s /q dist 2>nul",
    "build": "npm run clean && electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "ai",
    "assistant",
    "gemini",
    "screen-capture"
  ],
  "author": "Your Name",
  "license": "MIT",  "build": {
    "appId": "com.yourname.pilot-ai",
    "productName": "Pilot AI Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/axios/**/*",
      "node_modules/dotenv/**/*"
    ],    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "category": "Office"
    }
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dotenv": "^17.2.0"
  }
}
